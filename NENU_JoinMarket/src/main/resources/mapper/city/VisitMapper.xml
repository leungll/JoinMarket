    <!--根据关键字查询-->
    <select id="queryVisitByKeyword" resultType="com.nenu.market.entity.city.Education">
        select t_city.id,education_yon,city_name,province,city_visit
        from t_city,t_province
        where `city_name` LIKE CONCAT('%',#{keyword},'%')
        and `education_yon` LIKE CONCAT('%',#{education_yon},'%')
        and t_city.city_name = t_province.city
    </select>

